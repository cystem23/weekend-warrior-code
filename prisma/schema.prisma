generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  fullName  String
  phone     String
  gender    String
  interests String[]
  role      Role     @default(USER)
}

model Activity {
  id           Int      @id @default(autoincrement())
  name         String
  description  String
  location     String
  date         String
  time         String
  author       String
  author_email String
  duration     Float
  registered   String[]
}

enum Role {
  USER
  ADMIN
}
